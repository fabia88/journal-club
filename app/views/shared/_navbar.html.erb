<div class="navbar-journal">
  <!-- Logo -->
  <div>
    <%= link_to root_path, class: "navbar-journal-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
  </div>
  <!-- Search bar -->
<!--   <form action="/papers" class="navbar-form navbar-right" id="navbar" role="search">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search Papers" name="search">
    </div>
    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
  </form> -->
  <!-- Right Navigation -->
  <div class="navbar-journal-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
    <!-- Links (when logged in) -->
    <%= link_to "My feed", papers_path, class: "navbar-journal-item navbar-journal-link" %>
    <%= link_to "My labs", labs_path, class: "navbar-journal-item navbar-journal-link" %>
    <!-- Avatar with dropdown menu -->
    <div class="navbar-journal-item">
      <div class="dropdown">
        <!-- Cloudinary image tag -->
        <% if current_user.avatar? %>
        <%= cl_image_tag current_user.avatar, width: 50, height: 50, gravity: :face, crop: :thumb, class: "avatar-large dropdown-toggle", id: "navbar-journal-menu", "data-toggle" => "dropdown" %>
        <% else %>
        <%= cl_image_tag "http://lorempixel.com/300/300/abstract/2/", width: 50, height: 50, gravity: :face, crop: :thumb, class: "avatar-large dropdown-toggle", id: "navbar-journal-menu", "data-toggle" => "dropdown" %>
        <% end %>
        <!-- Dropdown -->
        <ul class="dropdown-menu dropdown-menu-right navbar-journal-dropdown-menu">
          <li>
            <%= link_to user_path(current_user) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to root_path do %>
            <i class="fa fa-home"></i> <%= t(".profile", default: "Home") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i> <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login (when logged out) -->
    <%= link_to t(".sign_in", default: "Log in"), new_user_session_path, class: "navbar-journal-item navbar-journal-link" %>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-journal-item hidden-md hidden-lg">
    <div class="dropdown">
      <i id="icon-dropdown" class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-journal-dropdown-menu">
        <% if user_signed_in? %>
        <li><%= link_to t(".profile", default: "Home"), root_path %></li>
        <li><%= link_to t(".profile", default: "Profile"), user_path(current_user) %></li>
        <li><%= link_to "My feed", "#", class: "navbar-journal-item navbar-journal-link" %></li>
        <li><%= link_to "My labs", labs_path, class: "navbar-journal-item navbar-journal-link" %></li>
        <li><%= link_to t(".sign_out", default: "Log out"), destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to t(".sign_in", default: "Log in"), new_user_session_path, class: "navbar-journal-item navbar-journal-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
