<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h2>Papers</h2>
    </div>

    <% @papers.each do |paper| %>
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="card">
        <div class="card-description">
          <h3><%= paper.title %></h3>
          <ul class="list-inline list-unstyled">
            <% paper.authors.each do |author| %>
            <li><%= author.name %></li>
            <% end %>
          </ul>
          <p><%= paper.date %> | <%= paper.source %> | <%= paper.reference %></p>
          <%= link_to "", paper_path(paper), class: "card-link" %>
        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>
