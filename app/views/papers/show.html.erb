<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <!-- Paper title -->
      <div>
        <h2><%= @paper.title %></h2>
      </div>
      <!-- Paper authors -->
      <div>
        <h3>Authors</h3>
        <% @paper.authors.each do |author| %>
        <p>
          <img class="avatar-large hidden-xs" src="http://lorempixel.com/100/100/abstract/1/">
          <%= author.name %>
        </p>
        <% end %>
      </div>
      <!-- Paper citation info -->
      <div>
        <h4><%= @paper.date %> | <%= @paper.source %> | <%= @paper.reference %></h4>
      </div>
      <!-- Paper abstract -->
      <div>
        <h3>Abstract</h3>
        <p><%= @paper.abstract %></p>
      </div>
      <!-- Paper links -->
      <div>
        <%= link_to "Go to source", @paper.source %>
        <ul>
          <% @labs.each do |lab| %>
          <li>
            <%= link_to "Share with #{lab.name}", new_lab_paper_post_path(lab, @paper)%>
          </li>
          <% end %>
        </ul>
      </div>
      <!-- Index reviews -->
      <div>
        <h3>Reviews</h3>
        <% @paper.reviews.each do |review|%>
        <div class="message">
          <img class="avatar-large hidden-xs" src="http://lorempixel.com/100/100/abstract/1/">
          <div class="message-name">
            <h3><%= review.user.first_name %> <%= review.user.last_name %></h3>
            <p><%= review.created_at %></p>
          </div>
          <div class="message-body">
            <p><%= review.content %></p>
          </div>
        </div>
        <% end %>
      </div>
      <!-- Create review -->
      <div>
        <h3>New review</h3>
        <div class="form-group">
          <%= simple_form_for([@paper, @review]) do |f|%>
          <%= f.input :content, class: "form-control" %>
          <%= f.button :submit, "Publish", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
