<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="card-form">
        <h2>New Lab</h2>

        <%= simple_form_for(@lab) do |f| %>
        <%= f.input :name, autofocus: true %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-yellow-inverted button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
